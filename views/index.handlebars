<div class = "container justify-content-center">

    <div class="jumbotron">
        <h1>Eat-Da-Burger</h1>
        <img src = "/assets/img/burger-pic.png"/>
    </div>

    <div class="row">
        <div class = "col-md-12 mt-3">
            <h3>Burgers Available</h3>

            <div class="panel panel-default">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Burgers Consumed</h3>

            <div class="panel panel-default">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
                
        </div>
    </div>

    <div class="col-md-12">
        <h3>Add a burger to the list:</h3>
        <form class="createBurger">
            <div class="form-group">
                <label for="createB">Name of burger</label>
                <input type="text" id="createB" name="name">
                <input type="hidden" name="eaten" value="0">
            </div>

            <button class="btn btn-secondary">Add your burger!</button>
        </form>
    </div>

</div>